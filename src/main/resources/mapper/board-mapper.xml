<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
    <!--sql문이 작성되는 공간-->

    <!--도서 목록 조회-->
    <select id="getList" resultType="board"> <!--mybatis. alias="board"-->
        SELECT bookid,
               bookname,
               publisher,
               price
        FROM book
        ORDER BY bookid ASC
    </select>

    <!--도서 추가 (DB 저장)-->
    <insert id="save" parameterType="board">
        INSERT INTO book (bookname, publisher, price)
        VALUES (#{bookname}, #{publisher}, #{price})
    </insert>

    <!--도서 상세 정보 가져오기-->
    <select id="detail" parameterType="int" resultType="board">
        SELECT bookid,
               bookname,
               publisher,
               price
        FROM book
        WHERE bookid = #{id}
    </select>

<!--    도서 정보 삭제하기-->
    <delete id="goDelete" parameterType="int">
        DELETE
        FROM book
        WHERE bookid = #{id}
    </delete>

<!--    도서 정보 수정-->
    <update id="goUpdate" parameterType="board">
        UPDATE book
        SET bookname = #{bookname},
            publisher = #{publisher},
            price = #{price}
        WHERE bookid = #{bookid}
    </update>
</mapper>